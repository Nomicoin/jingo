extends layout

include mixins/assets

block content
  h1 Edit: #{metadata.asset.name}

  mixin editMetadata(metadata.base.xlink, asset.data)

  h2 Upload Image

  form(action="/image/upload", method="post", enctype="multipart/form-data")
    select(name="field")
      option photo
      option phylo
      option qrcode
      option ITS
    input(type="file", name="image")
    input(type="hidden", name="asset", value="#{metadata.asset.name}")
    input(type='submit',value='upload').btn.btn-primary
