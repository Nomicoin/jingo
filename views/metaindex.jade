extends layout

block content

  h1 metadata versions

  table.table-bordered.table-hover.table-condensed
    each version in versions
      tr
        td 
          a(href="/meta/#{version.snapshot.link}") #{version.snapshot.timestamp}
        td
          a(href="/meta/#{version.link}") #{version.name}
        td #{version.snapshot.author}
        td #{version.snapshot.message}

  a(href="/meta") metadata index