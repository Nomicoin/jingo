extends layout

include mixins/form

block content
  h1 #{title}

  ul
  each strain in strains
    li
      a(href="/view/#{strain.xlink}") #{strain.title}

  hr 

  form(action='/new/asset', method='post', class='edit')
    input.form-control(required, type='text', placeholder='Enter the strain title', name='newTitle', value="strain title")
    input(type='hidden',name='kind',value='Strain')
    input(type='submit',value='new strain').btn.btn-primary

